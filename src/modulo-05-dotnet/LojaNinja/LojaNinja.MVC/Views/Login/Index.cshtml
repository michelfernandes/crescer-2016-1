@model LojaNinja.MVC.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Login</h2>

@using (Html.BeginForm("Entrar", "Login", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(excludePropertyErrors: false)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email) <br />
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha) <br />
        @Html.PasswordFor(m => m.Senha)
    </div>
    <div class="form-group">
        <input type="submit" value="Entrar" />
    </div>
}
<div>
    Ainda não tem uma conta?
    <a href="~/Login/Cadastro">Cadastre-se.</a>
</div>
