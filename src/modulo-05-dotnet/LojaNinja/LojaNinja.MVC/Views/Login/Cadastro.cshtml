@model LojaNinja.MVC.Models.LoginViewModel
@{
    ViewBag.Title = "CadastroUsuario";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@if (@ViewBag.Mensagem != null)
{
    <h3 class="alert alert-success">@ViewBag.Mensagem</h3>
}


<h2>Criar conta</h2>
@using (Html.BeginForm("ValidaCadastro", "Login", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    <div>
        @Html.ValidationSummary(excludePropertyErrors: false)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email) <br />
        @Html.TextBoxFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Nome) <br />
        @Html.TextBoxFor(m => m.Nome)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Senha) <br />
        @Html.PasswordFor(m => m.Senha)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmarSenha) <br />
        @Html.PasswordFor(m => m.ConfirmarSenha)
    </div>
    <div class="form-group">
        <input type="submit" value="Cadastrar" />
    </div>    
}


