<style>
    .erro {
        color: red;
    }
</style>

<form id="frmNovoCavaleiro" method="POST">
    <!-- nome -->
    <label for="txtNomeCavaleiro">Nome</label>
    <input id="txtNomeCavaleiro" type="text" name="nome" placeholder="Ex: Shiryu"> <br />
    <!-- tipoSanguineo -->
    <label for="slTipoSanguineo">Tipo Sanguíneo</label>
    <select id="slTipoSanguineo" name="tipoSanguineo">
        <option selected>Selecione</option>
        <option value="A">A</option>
        <option value="B">B</option>
        <option value="AB">AB</option>
        <option value="O">O</option>
    </select><br />
    <!-- dataNascimento -->
    <label for="txtDtNascimento">Data de nascimento</label>
    <input id="txtDtNascimento" type="text" name="dataNascimento" placeholder="Ex: 4/11/2016"><br />
    <!-- altura em metros -->
    <label for="nbAlturaMetros">Altura (metros)</label>
    <input id="nbAlturaMetros" type="number" name="alturaMetros" placeholder="Ex: 1.76" min="0" step="0.01"><br /> <!-- step: https://developer.mozilla.org/pt-BR/docs/Web/HTML/Element/Input -->
    <!-- peso em kilos -->
    <label for="nbPesoKilos">Peso (kilos)</label>
    <input id="nbPesoKilos" type="number" name="pesoKg" placeholder="Ex: 73.5" min="0" step="0.01"><br />
    <!-- signo -->
    <label for="slSigno">Signo</label>
    <select id="slSigno" name="signo">
        <option selected>Selecione</option>
        <option value="Aries">Áries</option>
        <option value="Touro">Touro</option>
        <option value="Gemeos">Gêmeos</option>
        <option value="Cancer">Câncer</option>
        <option value="Leao">Leão</option>
        <option value="Virgem">Virgem</option>
        <option value="Libra">Libra</option>
        <option value="Escorpiao">Escorpião</option>
        <option value="Sagitario">Sagitário</option>
        <option value="Capricornio">Capricórnio</option>
        <option value="Aquario">Aquário</option>
        <option value="Peixes">Peixes</option>
    </select><br />
    <!-- localNascimento -->
    <label for="txtLocalNascimento">Local de nascimento</label>
    <input id="txtLocalNascimento" type="text" name="localNascimento" placeholder="Ex: Porto Alegre"><br />
    <!-- localTreinamento -->
    <label for="txtLocalTreinamento">Local de treinamento</label>
    <input id="txtLocalTreinamento" type="text" name="localTreinamento" placeholder="Ex: Alvorada"><br />
    <!-- Adicionar golpe -->
    <button id="btnAdicionarGolpe" type="button">Adicionar golpe...</button>
    <ul id="novosGolpes"></ul><br />
    <!-- Adicionar imagem -->
    <button id="btnAdicionarImg" type="button">Adicionar imagem...</button>
    <ul id="novasImagens"></ul><br />
    <button id="btnNovoCavaleiro" class="btn btn-primary">Cadastrar!</button>
</form>
<hr>

